#!/bin/bash

set -e

U=$(getent passwd $USER_ID | tr ':' ' ' | awk '{ print $1 }')

export BUILD_FLAGS

su $U -c "cargo build $BUILD_FLAGS --target=x86_64-unknown-linux-musl -j 8"
su $U -c "cargo test --target=x86_64-unknown-linux-musl"
su $U -c "cargo doc"


GREEN='\033[1;32m'
NC='\033[0m'

echo
echo -e "    ${GREEN}Running system tests${NC}"

system-tests/test

