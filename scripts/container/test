#!/bin/bash

set -e

U=$(getent passwd $USER_ID | tr ':' ' ' | awk '{ print $1 }')

export BUILD_FLAGS

su $U -c "cargo build $BUILD_FLAGS --target=x86_64-unknown-linux-musl -j 8"
su $U -c "RUST_BACKTRACE=1 cargo test -j 1 --target=x86_64-unknown-linux-musl"
su $U -c "cargo doc"


GREEN='\033[1;32m'
NC='\033[0m'

echo
echo -e "    ${GREEN}Running system tests${NC}"

rm -rf target/path
if echo $BUILD_FLAGS | grep 'release' >/dev/null ; then
    ln -s "x86_64-unknown-linux-musl/release/" target/path
else
    ln -s "x86_64-unknown-linux-musl/debug/" target/path
fi

system-tests/test

